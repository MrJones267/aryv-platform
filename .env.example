# ARYV Platform Environment Configuration Template
# Copy this file to .env and update with your actual values

# Environment
NODE_ENV=development # development, staging, production
FLASK_ENV=development # development, production

# Database Configuration
POSTGRES_PASSWORD=aryv_secure_password_change_me
DATABASE_URL=postgresql://aryv_user:aryv_secure_password_change_me@postgres:5432/aryv_db

# Redis Configuration
REDIS_PASSWORD=aryv_redis_password_change_me
REDIS_URL=redis://default:aryv_redis_password_change_me@redis:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long-change-in-production
JWT_EXPIRES_IN=7d

# API Configuration
PORT=3001
CORS_ORIGIN=http://localhost:3000,http://localhost:19006
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info # debug, info, warn, error

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Payment Processing (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Cloud Storage (AWS S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=aryv-uploads
AWS_REGION=us-east-1

# External APIs
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
OPENAI_API_KEY=your-openai-api-key

# Frontend Configuration
REACT_APP_API_URL=http://localhost:3001
REACT_APP_SOCKET_URL=http://localhost:3001
REACT_APP_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Mobile App Configuration (React Native CLI)
REACT_NATIVE_PACKAGER_HOSTNAME=localhost
API_BASE_URL=http://localhost:3001

# Monitoring & Analytics
GRAFANA_PASSWORD=admin_change_me

# SSL/TLS Configuration (Production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/private.key

# Production Domain
DOMAIN_NAME=yourdomain.com

# Security Headers
HELMET_CSP_ENABLED=true
HELMET_HSTS_MAX_AGE=31536000

# File Upload Limits
MAX_FILE_SIZE=10mb
MAX_FILES=10

# Session Configuration
SESSION_SECRET=your-session-secret-change-in-production
SESSION_MAX_AGE=86400000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# Background Jobs
QUEUE_REDIS_URL=redis://default:aryv_redis_password_change_me@redis:6379

# Geolocation Services
LOCATION_ACCURACY_THRESHOLD=100 # meters
LOCATION_UPDATE_INTERVAL=5000 # milliseconds

# Real-time Features
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# AI/ML Configuration
ML_MODEL_PATH=/app/models
ML_BATCH_SIZE=32
ML_CONFIDENCE_THRESHOLD=0.8

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * * # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Feature Flags
FEATURE_AI_MATCHING=true
FEATURE_BLOCKCHAIN_COURIER=false
FEATURE_REAL_TIME_CHAT=true
FEATURE_PUSH_NOTIFICATIONS=true

# Development Tools
DEBUG_MODE=false
MOCK_EXTERNAL_APIS=false
ENABLE_SWAGGER_UI=true

# Monitoring URLs
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000

# Container Health Check Intervals
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3