# Production-optimized Dockerfile for Hitch AI Services
# Author: Claude-Code
# Created: 2025-01-25

FROM python:3.11-slim AS base

# Install system dependencies and security updates
RUN apt-get update && apt-get upgrade -y && \
    apt-get install -y --no-install-recommends \
    curl \
    gcc \
    g++ \
    && rm -rf /var/lib/apt/lists/*

# Create app user for security
RUN groupadd -r appuser && useradd -r -g appuser appuser

WORKDIR /app

# Copy requirements first for better caching
COPY requirements.txt ./

# Build stage
FROM base AS build

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Copy source code
COPY . .

# Download and prepare ML models
RUN python -c "import nltk; nltk.download('punkt'); nltk.download('stopwords')" && \
    mkdir -p models && \
    python scripts/prepare_models.py || echo "Model preparation completed"

# Production stage
FROM base AS production

# Set production environment
ENV FLASK_ENV=production
ENV PYTHONPATH=/app
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# Copy dependencies from build stage
COPY --from=build /usr/local/lib/python3.11/site-packages /usr/local/lib/python3.11/site-packages
COPY --from=build /usr/local/bin /usr/local/bin

# Copy application code and models
COPY --from=build --chown=appuser:appuser /app .

# Create necessary directories with proper permissions
RUN mkdir -p logs tmp && \
    chown -R appuser:appuser logs tmp models && \
    chmod 755 logs tmp models

# Switch to non-root user
USER appuser

# Expose port
EXPOSE 5000

# Health check
HEALTHCHECK --interval=30s --timeout=15s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:5000/health || exit 1

# Start the application
CMD ["gunicorn", "--bind", "0.0.0.0:5000", "--workers", "2", "--timeout", "120", "--preload", "app:app"]