# ARYV Mobile App - Production Environment Configuration
# Created: 2025-01-25 | Last Modified: 2025-01-25

# API Configuration
# Temporary endpoints for testing (update when aryv-app.com is ready)
API_BASE_URL=https://api.example.com
SOCKET_URL=https://realtime.example.com
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3

# App Configuration
APP_NAME=ARYV
BUNDLE_ID=com.aryvapp.mobile
VERSION_CODE=1
VERSION_NAME=1.0.0
APP_ENVIRONMENT=production

# Feature Flags - Production Optimized
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_CRASH_REPORTING=true
ENABLE_DEBUG_MODE=false
ENABLE_WEBRTC_CALLS=false
ENABLE_OFFLINE_MODE=false
ENABLE_PERFORMANCE_MONITORING=false
ENABLE_ADVANCED_SYNC=false

# Third-party Services
GOOGLE_MAPS_API_KEY=YOUR_PRODUCTION_GOOGLE_MAPS_API_KEY_HERE
SENTRY_DSN=YOUR_PRODUCTION_SENTRY_DSN_HERE

# Payment System - In-built Escrow (No Stripe needed)
ESCROW_SYSTEM_ENABLED=true
PAYMENT_PROCESSOR=escrow
STRIPE_PUBLISHABLE_KEY=deprecated_use_escrow_system

# Build Configuration
FLIPPER_ENABLED=false
HERMES_ENABLED=true
PROGUARD_ENABLED=true
BUNDLE_SIZE_LIMIT=50MB

# Security
ALLOW_HTTP=false
CERTIFICATE_PINNING=true
LOG_LEVEL=error

# App Store Configuration
IOS_BUNDLE_ID=com.aryvapp.mobile
ANDROID_PACKAGE_NAME=com.aryvapp.mobile