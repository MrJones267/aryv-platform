{
  "extends": "./tsconfig.json", 
  "compilerOptions": {
    "skipLibCheck": true,
    "noEmit": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "strictPropertyInitialization": false,
    "strict": false
  },
  "exclude": [
    "**/__tests__/**",
    "**/*.test.ts", 
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "src/_problematic_files/**"
  ]
}