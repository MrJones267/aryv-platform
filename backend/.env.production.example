# ARYV Backend Production Environment Variables
# Copy this file to .env.production and fill in actual values
# These should be set in Railway dashboard or via CLI

# ===========================================
# CORE APPLICATION SETTINGS
# ===========================================
NODE_ENV=production
PORT=3001

# ===========================================
# DATABASE CONFIGURATION  
# ===========================================
# Railway auto-provides this when PostgreSQL is added
DATABASE_URL=postgresql://postgres:password@host:port/database

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secure-jwt-secret-key-64-characters-minimum-length-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ===========================================
# CORS & API SECURITY
# ===========================================
CORS_ORIGIN=https://api.aryv-app.com
API_RATE_LIMIT=100
API_WINDOW_MS=900000

# ===========================================
# GOOGLE SERVICES (OPTIONAL)
# ===========================================
GOOGLE_CLIENT_ID=your-google-oauth-client-id.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# ===========================================
# AWS S3 FILE STORAGE (OPTIONAL)
# ===========================================
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=aryv-production-storage

# ===========================================
# EXTERNAL SERVICES (OPTIONAL)
# ===========================================
SENDGRID_API_KEY=your-sendgrid-api-key-for-emails
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token

# ===========================================
# MONITORING & LOGGING (OPTIONAL)
# ===========================================
SENTRY_DSN=your-sentry-dsn-for-error-tracking
LOG_LEVEL=info

# ===========================================
# CURRENCY & COUNTRY SERVICES
# ===========================================
CURRENCY_API_KEY=your-currency-exchange-api-key
FALLBACK_CURRENCY_ENABLED=true
FALLBACK_COUNTRY_ENABLED=true

# ===========================================
# WEBSOCKET & REAL-TIME FEATURES
# ===========================================
SOCKET_CORS_ORIGIN=https://aryv-app.com,https://www.aryv-app.com
REDIS_URL=redis://localhost:6379

# ===========================================
# ENCRYPTION & QR CODES
# ===========================================
QR_SECRET_KEY=your-qr-code-encryption-secret-key
PACKAGE_ENCRYPTION_KEY=your-package-data-encryption-key

# ===========================================
# RAILWAY-SPECIFIC SETTINGS
# ===========================================
RAILWAY_STATIC_URL=https://your-app.railway.app
RAILWAY_PUBLIC_DOMAIN=api.aryv-app.com