# ARYV Backend - Production Environment Configuration
# Domain: aryv-app.com

# Environment
NODE_ENV=production
PORT=8080

# Database Configuration (PostgreSQL + PostGIS)
POSTGRES_HOST=aryv-postgres
POSTGRES_PORT=5432
POSTGRES_DB=aryv_production
POSTGRES_USER=aryv_user
POSTGRES_PASSWORD=YOUR_SECURE_DB_PASSWORD_HERE

# Redis Configuration
REDIS_HOST=aryv-redis
REDIS_PORT=6379
REDIS_PASSWORD=YOUR_SECURE_REDIS_PASSWORD_HERE

# JWT Configuration
JWT_SECRET=YOUR_SUPER_SECURE_JWT_SECRET_256_BITS_MIN
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=YOUR_REFRESH_SECRET_256_BITS_MIN
JWT_REFRESH_EXPIRES_IN=7d

# Admin JWT (separate secret for admin panel)
ADMIN_JWT_SECRET=YOUR_ADMIN_JWT_SECRET_256_BITS_MIN
ADMIN_JWT_EXPIRES_IN=8h

# CORS Configuration
CORS_ORIGIN=https://aryv-app.com,https://www.aryv-app.com,https://admin.aryv-app.com

# Security & Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
HELMET_ENABLED=true

# External Services
STRIPE_SECRET_KEY=sk_live_YOUR_STRIPE_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_STRIPE_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

GOOGLE_MAPS_API_KEY=YOUR_GOOGLE_MAPS_API_KEY

# Email Service (SendGrid/Mailgun)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=YOUR_SENDGRID_API_KEY

# File Storage (AWS S3) - FALLBACK
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_S3_BUCKET=aryv-production-uploads
AWS_REGION=us-east-1

# Cloudflare R2 Storage - PRODUCTION
CLOUDFLARE_R2_ACCESS_KEY=5e32a2e7d785343862a4b4cff13da063
CLOUDFLARE_R2_SECRET_KEY=3936145fcbd784c92967a44dc045c496d10b536c2709b8dad11ba98e5d847eb2
CLOUDFLARE_R2_BUCKET=aryv-app-platform-bucket
CLOUDFLARE_ACCOUNT_ID=22a16693828a3dbfd6bdf769e417be8c
